---
import aboutImg from "@/assets/about-astro.png";
import PageLayout from "@/layouts/Base.astro";
import { Image } from "astro:assets";

const meta = {
	description: "Oops! It looks like this page is lost in space!",
	title: "Oops! You found a missing page!",
};
---

<PageLayout meta={meta}>
	<h1 class="">404 | Oops something went wrong</h1>
	<p class="">Please use the navigation to find your way back</p>
	<div class="">
		<Image
			alt="A cartoon cactus looking at the 'Astro.build' logo"
			class=""
			loading="eager"
			src={aboutImg}
		/>
	</div>
</PageLayout>
